<div class="card bg-gray mb-5">
  <div class="card-body">
    <%= link_to 'New Event', new_event_path, class: 'btn btn-success' %>
  </div>
</div>

<div class="sortable" data-update-url="<%= sort_path(class_name: 'event') %>">
  <% @events.each do |event| %>
    <%= render event %>
  <% end %>
</div>
