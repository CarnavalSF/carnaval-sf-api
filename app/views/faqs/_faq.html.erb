<%= content_tag :div, id: dom_id(faq), class: 'card mb-5' do %>
  <div class="card-body">
    <div class="d-flex align-items-center">
      <%= icon 'resize-vert c-move mr-5' %>
      <div class="pr-5">
        <%= content_tag :span, faq.question, class: 'text-bold' %>
        <p class="tile-subtitle text-gray mb-0">
          <%= truncate faq.answer, length: 250, omission: '...' %>
        </p>
      </div>
      <div class="ml-auto">
        <%= link_to 'Edit', edit_faq_path(faq), class: 'btn btn-primary' %>
        <%= link_to icon('cross'), faq_path(faq), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-error' %>
      </div>
    </div>
  </div>
<% end %>
