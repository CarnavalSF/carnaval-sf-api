<div class="card bg-gray mb-5">
  <div class="card-body">
    <%= link_to 'New Vendor', new_vendor_path, class: 'btn btn-success' %>
  </div>
</div>

<div class="sortable" data-update-url="<%= sort_path(class_name: 'vendor') %>">
  <% @vendors.each do |vendor| %>
    <%= render vendor %>
  <% end %>
</div>
