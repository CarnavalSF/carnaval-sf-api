<%= spectre_form_with url: login_path, local: true do |f| %>
  <div class="card">
    <div class="card-body">
      <%= f.group :email do %>
        <%= f.label :email %>
        <%= f.email_field :email %>
        <%= f.errors :email %>
      <% end %>

      <%= f.group :password do %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.errors :password %>
      <% end %>
        <%= link_to 'Forgot password?' %>
    </div>
    <div class="card-footer mt-5 bg-gray">
      <%= f.submit 'Log in', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
